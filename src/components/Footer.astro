import Container from './SectionContainer.astro'
import SocialLinks from './SocialLinks.astro'
---

<footer class="p-5 pt-0 mb-12 w-full mx-auto flex flex-col gap-6 md:max-w-4xl">
    <Container id="footer" className="animate-pulse-fade-in animate-delay-500 animate-duration-600">
        <div class="flex justify-between">
            <div class="flex items-center gap-1 text-sm">
                <Sprout size={18} />
                <h2>Francisco Victorico Aguirre Jimenez</h2> 
                <span class="text-gray-500">-</span> 
                <p>2024</p>
            </div>
    
