---
import { Figma, Github, LibraryBig, MoveRight } from "lucide-astro";
import SectionContainer from "../SectionContainer.astro";
import ProjectItem from "../items/ProjectItem.astro"; 

const PROJECTS = [
    
    {
        title: "Project Name",
        description: "Description Project",
        technologies: ["HTML 5", "CSS", "..."],
        image: "projects-img/thumbnail-vg.png",
        githubLink: "https>//...",
        figmaLink: "https://...",
        liveLink: "https://",
    },
];
---

<SectionContainer id="projects" className="animate-pulse-fade-in animate-delay-300 animate-duration-500">
    
    <h2 class="text-2xl font-semibold flex gap-3 items-center text-neutral-200">
        <LibraryBig />
        Projects
    </h2>

    <div class="grid gap-3 md:grid-cols-2">
        {PROJECTS.map(project => <ProjectItem project={project} />)}
    </div>


    <a href="https://github.com/astrxnomo" target="_blank" class="inline-flex items-center text-sm justify-center rounded-xl bg-neutral-800 dark:hover:text-neutral-50 py-2 px-4 opacity-80 transition-opacity duration-150 hover:opacity-100 w-full md:w-auto group gap-2 font-medium ">
        More projects
        <MoveRight class="size-4 opacity-70 group-hover:opacity-100 group-hover:translate-x-[1.5px] duration-200"/>
    </a>
</SectionContainer>