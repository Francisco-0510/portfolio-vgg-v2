---
import SectionContainer from "../SectionContainer.astro";
import SocialLinks from "../SocialLinks.astro";
import { MapPin, ArrowUpRight, Sparkle } from "lucide-astro";

let avatar = "avatarBanner.png";
let technologies = ["HTML", "CSS", "JS", "PHP", "Git", "Astro", "React"];

let name = "Francisco V. Aguirre Jiménez";
let description =
  "Lorem ipsum dolor sit amet consectetur adipisicing elit. Ab quibusdam distinctio aut eligendi non, aliquam sit minus porro! Dolores, distinctio?";
let location = "Oaxaca, Mexico";
let contactEmail = "vgg.designer.01@gmail.com";
---

<SectionContainer className="animate-pulse-fade-in animate-duration-500">
  <div class="flex flex-col md:flex-row gap-6">
    <figure
      class="flex justify-center items-center object-fit flex-shrink-0 relative"
    >
      <img class="size-56 rounded-2xl" src={avatar} alt="Profile image" />
      <span
        class="absolute top-0 left-0 bg-neutral-800/80 text-neutral-200/80 py-1 px-2 rounded-xl text-xs"
        >Imagén profesional proximamente...</span
      >
    </figure>

    <div class="flex flex-col gap-6 grow">
      <div class="flex justify-between items-center flex-wrap">
        <a
          href="https://www.linkedin.com/in/vicwith-gg/"
          class="flex items-center text-xs gap-1.5 font-medium py-1.5 px-3 rounded-xl bg-green-800/40 text-green-200 opacity-80 transition-opacity duration-150 hover:opacity-100"
          target="_blank"
        >
          <span class="flex size-2 items-center">
            <span
              class="absolute inline-flex size-1.5 animate-ping rounded-full opacity-75 bg-green-300"
            ></span>
            <span
              class="relative inline-flex size-1.5 rounded-full bg-green-400"
            ></span>
          </span>
          Open to Work
        </a>

        <SocialLinks />
      </div>

      <div class="flex flex-col gap-2">
        <h1 class="text-neutral-200 text-3xl font-semibold">
          Hola, soy {name}
        </h1>
        <p class="text-neutral-400 text-sm">{description}</p>
      </div>

      <div class="flex flex-col grow justify-end">
        <div class="flex flex-col gap-4 md:flex-row justify-between">
          <div class="flex gap-2 items-center text-neutral-400">
            <MapPin class="size-4" />
            <p class="text-sm font-medium">{location}</p>
          </div>

          <a
            href={`mailto:${contactEmail}`}
            target="_blank"
            class="inline-flex items-center text-sm justify-center rounded-xl bg-neutral-800 dark:hover:text-neutral-50 py-2 px-4 opacity-80 transition-opacity duration-150 hover:opacity-100 w-full md:w-auto group gap-1 font-medium"
          >
            Contactame
            <ArrowUpRight
              class="size-4 opacity-70 group-hover:opacity-100 group-hover:translate-x-[1.5px] duration-200"
            />
          </a>
        </div>
      </div>
    </div>
  </div>

  <div
    class="w-full my-4 inline-flex flex-nowrap text-sm font-medium text-neutral-500 overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]"
  >
    <ul
      class="flex items-center justify-center md:justify-start [&_li]:mx-5 [&_img]:max-w-none animate-infinite-scroll prevent-select"
    >
      {
        technologies.map((tech, index) => (
          <>
            <li>{tech}</li>
            {index < technologies.length && <Sparkle class="size-3" />}
          </>
        ))
      }
    </ul>
    <ul
      class="flex items-center justify-center md:justify-start [&_li]:mx-5 [&_img]:max-w-none animate-infinite-scroll"
      aria-hidden="true"
    >
      {
        technologies.map((tech, index) => (
          <>
            <li>{tech}</li>
            {index < technologies.length && <Sparkle class="size-3" />}
          </>
        ))
      }
    </ul>
  </div>
</SectionContainer>
